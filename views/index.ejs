<% if (msg.length != 0) { %>
    <div class="alert alert-success" role="alert">
        <%- msg %> 
    </div>
<% } %>

<h1 class="h3 mb-4 text-gray-800">Ini adalah halaman <%- title; %> </h1>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Daftar Kontak</h6>
            </div>
            <a href="/contact/add" class="btn btn-primary btn-icon-split" style="width: 200px; margin: 20px 0 0 20px;">                
                <span class="text">Tambah Data Kontak</span>
            </a>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% let nomor = 1 %> 
                            <% contacts.forEach(mhs => { %>
                                <tr>
                                    <td><%= nomor++; %> </td>
                                    <td><%= mhs.nama %> </td>
                                    <td><%= mhs.email %></td>
                                    <td><%= mhs.phone %></td>
                                    <td>
                                        <a href="/detail/<%= mhs.nama %> " class="btn btn-info btn-circle btn-sm">
                                            <i class="fas fa-info-circle" title="DETAIL"></i>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash" title="DELETE"></i>
                                        </a>
                                    </td>
                                </tr>
                            
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>